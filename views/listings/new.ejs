
    <% layout("/layout/boilerplate") %>
    <div class="row mt-3">
      <div class="col-8 offset-2 ">
        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings"
        novalidate class="needs-validation " enctype="multipart/form-data"
        >
      <div class="mb-3">
      <lable for="title" class="form-label">Title</lable>
      <input name="listing[title]" placeholder="Add a Catchy title"
       type="text" class="form-control"
       required
       />
        <div class="valid-feedback">Title Looks good!</div>
    <div class="mb-3"> 
       <lable for="description" class="form-label">Description</lable>
      <textarea
      name="listing[description]"
      class="form-control"
      required
    ></textarea>
    <div class="invalid-feedback"> Price enter a short discription</div>
    </div>
   
      </div>
    <div class="mb-3">
      <lable for="image" class="form-label">Upload Listing Image</lable>
      <input
      name="listing[image]"
        type="file" class="form-control"
        required
        />
      </div>
      <div class="row">
      <div class="mb-3 col-md-4">
        <lable for="price" class="form-label">Price </lable>
        <input name="listing[price]" placeholder="1200" 
         class="form-control"
         required
        />
        <div class="invalid-feedback"> Price should be valid</div>
      </div>
   <div class="mb-3 col-md-8 ">
     <lable for="country" class="form-label">Country </lable>
     <input name="listing[country]" placeholder="India" 
     type="text" class="form-control"
     required/>
     <div class="invalid-feedback">Country name should be valid</div>

    </div>
  </div>
    <div class="mb-3 ">
      <lable for="location" class="form-label">Location </lable>
      <input
      name="listing[location]"
      placeholder="Jaipur,Rajasthan"
      type="text"
      class="form-control"
    required
      />
      <div class="invalid-feedback">Location should be valid</div>

    </div>
    <div class="mb-3">
      <label for="Category" class="form-label">Category</label>
      <select class="form-select form-select-sm" aria-label="Small select example" name="listing[category]" required>
        <div class="invalid-feedback">Please choose category!</div>
        <option value="trending">Trending</option>
        <option value="iconic cities">Iconic Cities</option>
        <option value="rooms">Rooms</option>
        <option value="castle">Castle</option>
        <option value="mountain views">Mountain Views</option>
        <option value="camping">Camping</option>
        <option value="amazing nature">Amazing Nature</option>
        <option value="farms">Farm</option>
        <option value="arctic">Arctic</option>
        <option value="boats">Boats</option>
        <option value="domes">Domes</option>
      </select>
    </div>
    </div>
    </div>
    <button class="btn btn-dark add-btn mt-3  offset-2">Add</button>
  </form>
</div>
</div>
</div>
  
